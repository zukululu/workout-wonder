<div class='oneWorkout-container'>
<h2>{{ goal }}</h2>
{{#if exercises}}
<h3>Exercises</h3>
        {{#each exercises }}
        <h1>{{ name }} </h1>
        <p>Sets: {{sets}} Reps: {{reps}}</p>
        {{/each}}
{{/if}}

<br>
<form action='/workouts/{{ id }}?_method=PUT' method='POST' class='new-exercise'>
<input type='text' name='name' placeholder='Exercise'/>
<input type='text' name='sets'placeholder='Sets'/>
<input type='text' name='reps'placeholder='Reps'/>
<br>
<br>
<button type='submit' class='workout-button' >Submit</button>
</form>

<form action='/workouts/{{ this.id }}?_method=DELETE' method='POST'>
<input type='submit' value="Delete Workout" class='workout-button'>
</form>

</div>